{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "es6": true,
    "browser": true,
    "jest": true
  },
  "plugins": [
    "react",
    "jsx-a11y",
    "import"
  ],
  "rules": {
    "indent": [
      "error",
      4
    ],
    "linebreak-style": 0,
    "react/jsx-filename-extension": 0,
    "react/jsx-indent": [
      "error",
      4
    ],
    "react/jsx-one-expression-per-line": 0,
    "semi": [
      "error",
      "never"
    ]
  }
}